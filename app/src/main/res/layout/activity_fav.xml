<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fav"
    android:background="@color/LightWhite">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <ImageView
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/arrowb"
                android:padding="15dp"
                android:id="@+id/backButton"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <androidx.appcompat.widget.SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:closeIcon="@drawable/cancel"
                android:textColor="#000"

                app:searchHintIcon="@drawable/search"
                app:searchIcon="@drawable/search"
                android:textStyle="bold"
                app:queryHint="Search...."

                android:padding="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/serachView"
                />


        </RelativeLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Favorite Hotels"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/muli_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/Danger"
                android:fontFamily="@font/muli_black"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>