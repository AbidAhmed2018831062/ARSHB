<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAfterNotification"
    android:background="#fff"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="#000"
          android:text="Your Order has been approved by the hotel management. Now go to the Payment Pending Section of your profile to complete the order."
          android:id="@+id/user"
          android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Your hotel has a new order. Go to the order confirmation section of your hotel profile to approve or disapprove it"
            android:id="@+id/hotel"
            android:visibility="gone"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000"
            android:text="OK"
            android:id="@+id/OK"
            />
    </LinearLayout>

</ScrollView>