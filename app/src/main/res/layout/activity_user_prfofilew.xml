<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPrfofilew"
    android:background="#fff"
    android:gravity="center"
    android:paddingTop="30dp"
    android:transitionName="nextTra"
   >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/sh"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_black"
        android:textColor="#000"
        android:id="@+id/name"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:text="Shakib Khandaker"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_bold"
        android:textColor="#000"
        android:id="@+id/study"
      android:drawableLeft="@drawable/school"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="    Shahjalal University"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_bold"
        android:textColor="#000"
        android:id="@+id/place"
        android:drawableLeft="@drawable/location"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:text="    Sylhet"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_bold"
        android:textColor="#000"
        android:id="@+id/date"
        android:drawableLeft="@drawable/date"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:text="    Joined on April 2017"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_bold"
        android:textColor="#000"
        android:id="@+id/fb"
        android:drawableLeft="@drawable/profile"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:text="    Sadman Shakib"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Edit Details"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#3949AB"></Button>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_marginTop="40dp"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_black"
        android:textColor="#000"

        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Me Section"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:id="@+id/order">
            <TextView

                android:text="Order Given"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16dp"></TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/blueish"
            android:id="@+id/fav">
            <TextView

                android:text="Favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16dp"></TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/save"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/makeUplight">
            <TextView

                android:text="Watch Later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16dp"></TextView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:text="Upcoming Orders"
            android:textColor="#000"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/blueish"
            android:id="@+id/upcoming">
        <TextView

            android:text="Upcoming Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16dp"></TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:text="Upcoming Orders"
            android:textColor="#000"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/blueish"
            android:id="@+id/pay">
            <TextView

                android:text="Pay Now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16dp"></TextView>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
    <TextView
    android:text="About Me"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:padding="30dp"
    android:textColor="#000"
    android:textStyle="bold"
    android:textSize="18dp"></TextView>
    <TextView
        android:id="@+id/aboutme"
        android:text="Hi, I am Shakib Khandaker. I am a student and vlogger. Love to travel and visit hotels. I am looking for good hotels which are very good with their behaviors and manners."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="#000"
        android:textSize="16dp"
        android:layout_marginBottom="30dp"></TextView> <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#673AB7"
        app:menu="@menu/userprofilemenu"
        app:itemIconTint="#000"
        app:backgroundTint="#fff"
        app:itemTextColor="#000"/>

    </LinearLayout>


</ScrollView>