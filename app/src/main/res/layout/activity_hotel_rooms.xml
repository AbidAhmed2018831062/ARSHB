<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelRooms"
    android:background="#fff"
    android:id="@+id/drawer">
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:background="@color/Black"
        app:headerLayout="@layout/menu__header"
        app:menu="@menu/menu_rooms"
        android:theme="@style/nav_theme"/>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:transitionName="nextTra"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/menuicon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_menu_24" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Hotel Noorzahan"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/h1"
                android:paddingLeft="10dp"
                android:fontFamily="@font/muli_black"></TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/dpp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/star31"
            android:scaleType="fitXY"
           ></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="Hotel Noorzahan"
            android:textColor="#000"
            android:textStyle="bold"
            android:id="@+id/h2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/muli_black"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Our Recommended Deals"
            android:textColor="#000"
            android:textStyle="bold"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/muli_black"></TextView>
   <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl4HR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>