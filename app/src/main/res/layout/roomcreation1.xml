<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:padding="20dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/sc">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="ChooseImage"
            android:id="@+id/ci"
            android:layout_marginBottom="10dp"></Button>
    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/star31"
        android:scaleType="fitXY"
        android:id="@+id/RoomImage"
        android:layout_marginBottom="10dp"></ImageView>
        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="Upload Image"
            android:id="@+id/ui"
            android:layout_marginBottom="10dp"></Button>
    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/rn"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room Name"
        app:boxStrokeColor="#000"
        app:boxStrokeWidthFocused="2dp"
        android:layout_marginBottom="20dp"

        app:endIconMode="clear_text"
        app:endIconTint="#000"
        app:hintTextColor="#000"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/create"
        app:startIconTint="#000"
        android:textColorHint="#000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/muli_bold"
            android:textColor="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/service"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Room Sevices"
        app:boxStrokeColor="#000"
        app:boxStrokeWidthFocused="2dp"

        app:endIconMode="clear_text"
        app:endIconTint="#000"
        app:hintTextColor="#000"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/create"
        app:startIconTint="#000"
        android:textColorHint="#000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/muli_bold"
            android:textColor="#000" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/price"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Price"
        app:boxStrokeColor="#000"
        android:layout_marginTop="20dp"
        app:boxStrokeWidthFocused="2dp"

        app:endIconMode="clear_text"
        app:endIconTint="#000"
        app:hintTextColor="#000"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/create"
        app:startIconTint="#000"
        android:textColorHint="#000">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_bold"
            android:textColor="#000" />
    </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/sub"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Submit Room"
                android:background="#000"
                android:textColor="#fff"
                android:visibility="gone"/>
            <Button
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delete Room"
                android:background="#000"
                android:textColor="#fff"/>
        </LinearLayout>



    </LinearLayout>



</ScrollView>